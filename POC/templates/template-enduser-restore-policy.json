{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "primary",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads",
                "s3:ListBucketVersions",
                "s3:ListMultipartUploadParts",
                "s3:GetBucketAcl",
                "s3:GetBucketNotification",
                "s3:GetBucketLocation",
                "s3:GetBucketLogging",
                "s3:GetBucketObjectLockConfiguration",
                "s3:GetBucketPolicy",
                "s3:GetBucketVersioning",
                "s3:GetBucketPolicyStatus",
                "s3:GetEncryptionConfiguration",
                "s3:GetLifecycleConfiguration",
                "s3:GetObject",
                "s3:GetObjectAcl",
                "s3:GetObjectAttributes",
                "s3:GetObjectRetention",
                "s3:GetObjectVersion",
                "s3:GetObjectVersionAcl",
                "s3:GetObjectVersionAttributes",
                "s3:GetObjectVersionTagging",
                "s3:AbortMultipartUpload",
                "s3:DeleteObject",
                "s3:PutLifecycleConfiguration",
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxbucketxxx",
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxbucketxxx/*"
            ]
        },
        {
            "Sid": "inventory",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetBucketAcl",
                "s3:GetBucketNotification",
                "s3:GetBucketLocation",
                "s3:GetBucketLogging",
                "s3:GetBucketPolicy",
                "s3:GetBucketPolicyStatus",
                "s3:GetEncryptionConfiguration",
                "s3:GetObject",
                "s3:GetObjectAcl",
                "s3:GetObjectAttributes"
            ],
            "Resource": [
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxinventoryxxx",
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxinventoryxxx/*"
            ]
        },
        {
            "Sid": "reports",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::xxxreportsxxx"
            ]
        },
        {
            "Sid": "AllowWrite2UserFolder",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::xxxreportsxxx/xxxuserxxx/*"
            ]
        },
        {
            "Sid": "S3BatchJobPermissions",
            "Effect": "Allow",
            "Action": [
                "s3:CreateJob",
                "s3:DescribeJob",
                "s3:ListJobs",
                "s3:UpdateJobPriority",
                "s3:UpdateJobStatus"
            ],
            "Resource": [
                "*"
            ]
        }
    ]
}