{
    "MetricAlarms": [
        {
            "AlarmName": "%OWNER%-%SYSTEM% no activity",
            "AlarmArn": "arn:aws:cloudwatch:%REGION%:%ACCOUNT%:alarm:%OWNER%-%SYSTEM% no activity",
            "AlarmDescription": "The server **%SYSTEM%** assigned to owner **%OWNER%** has had little activity in the previous 24 hours. Backup service might not be running.  Please check state of server. ",
            "ActionsEnabled": true,
            "OKActions": [],
            "AlarmActions": [
                     %NOTIFY%
            ],
            "InsufficientDataActions": [],
            "Dimensions": [],
            "EvaluationPeriods": 1,
            "DatapointsToAlarm": 1,
            "Threshold": 9.0,
            "ComparisonOperator": "LessThanOrEqualToThreshold",
            "TreatMissingData": "missing",
            "Metrics": [
                {
                    "Id": "e1",
                    // The fill value should be identical to threshold
                    // These keep the alarm from tripping while metrics are "in flux". m2,m3,m4 are not updated atomically by AWS
                    "Expression": "SUM([FILL(m2,9),FILL(m3,9),FILL(m4,9)])",
                    "Label": "All Requests",
                    "ReturnData": true
                },
                {
                    "Id": "m2",
                    "MetricStat": {
                        "Metric": {
                            "Namespace": "AWS/S3/Storage-Lens",
                            "MetricName": "AllRequests",
                            "Dimensions": [
                                {
                                    "Name": "metrics_version",
                                    "Value": "1.0"
                                },
                                {
                                    "Name": "storage_class",
                                    "Value": "STANDARD"
                                },
                                {
                                    "Name": "aws_region",
                                    "Value": "%REGION%"
                                },
                                {
                                    "Name": "bucket_name",
                                    "Value": "%OWNER%-%SYSTEM%-%BUCKET%"
                                },
                                {
                                    "Name": "aws_account_number",
                                    "Value": "%ACCOUNT%"
                                },
                                {
                                    "Name": "configuration_id",
                                    "Value": "%LENS%"
                                },
                                {
                                    "Name": "record_type",
                                    "Value": "BUCKET"
                                }
                            ]
                        },
                        "Period": 86400,
                        "Stat": "Sum"
                    },
                    "Label": "Requests - Standard",
                    "ReturnData": false
                },
                {
                    "Id": "m3",
                    "MetricStat": {
                        "Metric": {
                            "Namespace": "AWS/S3/Storage-Lens",
                            "MetricName": "AllRequests",
                            "Dimensions": [
                                {
                                    "Name": "metrics_version",
                                    "Value": "1.0"
                                },
                                {
                                    "Name": "storage_class",
                                    "Value": "GLACIER"
                                },
                                {
                                    "Name": "aws_region",
                                    "Value": "%REGION%"
                                },
                                {
                                    "Name": "bucket_name",
                                    "Value": "%OWNER%-%SYSTEM%-%BUCKET%"
                                },
                                {
                                    "Name": "aws_account_number",
                                    "Value": "%ACCOUNT%"
                                },
                                {
                                    "Name": "configuration_id",
                                    "Value": "%LENS%"
                                },
                                {
                                    "Name": "record_type",
                                    "Value": "BUCKET"
                                }
                            ]
                        },
                        "Period": 86400,
                        "Stat": "Sum"
                    },
                    "Label": "Requests - Glacier",
                    "ReturnData": false
                },
                {
                    "Id": "m4",
                    "MetricStat": {
                        "Metric": {
                            "Namespace": "AWS/S3/Storage-Lens",
                            "MetricName": "AllRequests",
                            "Dimensions": [
                                {
                                    "Name": "metrics_version",
                                    "Value": "1.0"
                                },
                                {
                                    "Name": "storage_class",
                                    "Value": "-"
                                },
                                {
                                    "Name": "aws_region",
                                    "Value": "%REGION%"
                                },
                                {
                                    "Name": "bucket_name",
                                    "Value": "%OWNER%-%SYSTEM%-%BUCKET%"
                                },
                                {
                                    "Name": "aws_account_number",
                                    "Value": "%ACCOUNT%"
                                },
                                {
                                    "Name": "configuration_id",
                                    "Value": "%LENS%"
                                },
                                {
                                    "Name": "record_type",
                                    "Value": "BUCKET"
                                }
                            ]
                        },
                        "Period": 86400,
                        "Stat": "Sum"
                    },
                    "Label": "Requests - Bucket",
                    "ReturnData": false
                }
            ]
        }
    ],
    "CompositeAlarms": []
}
