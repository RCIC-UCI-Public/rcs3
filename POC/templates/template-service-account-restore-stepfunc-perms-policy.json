{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "primary",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads",
                "s3:ListMultipartUploadParts",
                "s3:AbortMultipartUpload"
            ],
            "Resource": [
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxbucketxxx",
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxbucketxxx/*"
            ]
        },
        {
            "Sid": "inventory",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads",
                "s3:ListMultipartUploadParts",
                "s3:AbortMultipartUpload"
            ],
            "Resource": [
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxinventoryxxx",
                "arn:aws:s3:::xxxuserxxx-xxxhostxxx-xxxinventoryxxx/*"
            ]
        },
        {
            "Sid": "reports",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::xxxreportsxxx"

            ]
        },
        {
            "Sid": "AllowWrite2UserFolder",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::xxxreportsxxx/xxxuserxxx/*"
            ]
        },
        {
            "Sid": "S3BatchJobPermissions",
            "Effect": "Allow",
            "Action": [
                "s3:CreateJob",
                "s3:DescribeJob",
                "s3:ListJobs",
                "s3:UpdateJobPriority",
                "s3:UpdateJobStatus"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "athenaAccess",
            "Effect": "Allow",
            "Action": [
                "athena:startQueryExecution",
                "athena:stopQueryExecution",
                "athena:getQueryExecution",
                "athena:getDataCatalog"
            ],
            "Resource": [
                "arn:aws:athena:xxxregionxxx:xxxaccountidxxx:workgroup/xxxuserxxx",
                "arn:aws:athena:xxxregionxxx:xxxaccountidxxx:datacatalog/*"
            ]
        },
        {
            "Sid": "glueAccess",
            "Effect": "Allow",
            "Action": [
                "glue:CreateDatabase",
                "glue:DeleteDatabase",
                "glue:GetDatabase",
                "glue:GetDatabases",
                "glue:UpdateDatabase",
                "glue:CreateTable",
                "glue:DeleteTable",
                "glue:BatchDeleteTable",
                "glue:UpdateTable",
                "glue:GetTable",
                "glue:GetTables",
                "glue:BatchCreatePartition",
                "glue:CreatePartition",
                "glue:DeletePartition",
                "glue:BatchDeletePartition",
                "glue:UpdatePartition",
                "glue:GetPartition",
                "glue:GetPartitions",
                "glue:BatchGetPartition"
            ],
            "Resource": [
                "arn:aws:glue:xxxregionxxx:xxxaccountidxxx:catalog",
                "arn:aws:glue:xxxregionxxx:xxxaccountidxxx:database/*",
                "arn:aws:glue:xxxregionxxx:xxxaccountidxxx:table/*",
                "arn:aws:glue:xxxregionxxx:xxxaccountidxxx:userDefinedFunction/*"
            ]
        },
        {
            "Sid": "cloudwatchMetrics",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:PutMetricAlarm",
                "cloudwatch:DescribeAlarms",
                "cloudwatch:DeleteAlarms",
                "cloudwatch:GetMetricData"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "snsPublish",
            "Effect": "Allow",
            "Action": [
                "sns:Publish",
                "sns:ListTopics",
                "sns:GetTopicAttributes"
            ],
            "Resource": "*"
        }

    ]
}
