{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:ListBucketMultipartUploads",
                "s3:ListBucketVersions",
                "s3:ListJobs",
                "s3:ListMultipartUploadParts",
                "s3:DescribeJob",
                "s3:GetAccountPublicAccessBlock",
                "s3:GetBucketAcl",
                "s3:GetBucketNotification",
                "s3:GetBucketLocation",
                "s3:GetBucketLogging",
                "s3:GetBucketObjectLockConfiguration",
                "s3:GetBucketPolicy",
                "s3:GetBucketVersioning",
                "s3:GetBucketPublicAccessBlock",
                "s3:GetBucketPolicyStatus",
                "s3:GetEncryptionConfiguration",
                "s3:GetLifecycleConfiguration",
                "s3:GetObject",
                "s3:GetObjectAcl",
                "s3:GetObjectAttributes",
                "s3:GetObjectRetention",
                "s3:GetObjectVersion",
                "s3:GetObjectVersionAcl",
                "s3:GetObjectVersionAttributes",
                "s3:GetObjectVersionTagging",
                "s3:AbortMultipartUpload",
                "s3:CreateJob",
                "s3:DeleteObject",
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::{{ user }}-{{ host }}-{{ bucket }}",
                "arn:aws:s3:::{{ user }}-{{ host }}-{{ bucket }}/*"
            ],
            "Condition": {
                {{ iprestrictions }}
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetAccountPublicAccessBlock",
                "s3:GetBucketAcl",
                "s3:GetBucketNotification",
                "s3:GetBucketLocation",
                "s3:GetBucketLogging",
                "s3:GetBucketPolicy",
                "s3:GetBucketPublicAccessBlock",
                "s3:GetBucketPolicyStatus",
                "s3:GetEncryptionConfiguration",
                "s3:GetObject",
                "s3:GetObjectAcl",
                "s3:GetObjectAttributes"
            ],
            "Resource": [
                "arn:aws:s3:::{{ user }}-{{ host }}-{{ inventory }}",
                "arn:aws:s3:::{{ user }}-{{ host }}-{{ inventory }}/*"
            ]
        },
        {
            "Effect": "Deny",
            "Action": [
                "s3:CreateBucket",
                "s3:DeleteBucket",
                "s3:CreateAccessPoint",
                "s3:CreateMultiRegionAccessPoint",
                "s3:CreateAccessPointForObjectLambda",
                "s3:DeleteObjectVersion",
                "s3:BypassGovernanceRetention",
                "s3:DeleteBucketPolicy",
                "s3:PutBucketAcl"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "sns:Publish",
            "Resource": "arn:aws:sns:{{ region }}:{{ accountid }}:{{ user }}-{{ host }}-{{ ownernotify }}",
            "Condition": {
                {{ iprestrictions }}
            }
        },
        {
            "Effect": "Allow",
            "Action": "sns:ListTopics",
            "Resource": "arn:aws:sns:{{ region }}:{{ accountid }}:*",
            "Condition": {
                {{ iprestrictions }}
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:ListAccessKeys",
                "iam:CreateAccessKey",
                "iam:DeleteAccessKey"
            ],
            "Resource": "arn:aws:iam::{{ accountid }}:user/{{ user }}-{{ host }}-sa",
            "Condition": {
{%- if True %}
                "IpAddress": { "aws:SourceIp": [
{%- for ip in iprestrictions %}
                    "{{ ip }}"{% if not loop.last %},{% endif %}
{%- endfor %}
                ] }
{%- endif %}
            }
        }

    ]
}
