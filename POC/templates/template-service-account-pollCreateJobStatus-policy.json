{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:xxxregionxxx:xxxaccountidxxx:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:xxxregionxxx:xxxaccountidxxx:log-group:/aws/lambda/pollCreateJobStatus:*"
            ]
        }
    ]
}
