# Grafana Configuration
# These values should come from the infra module's outputs:
# terraform output -state=../infra/terraform/terraform.tfstate grafana_api_key
grafana_username = "admin"
grafana_password = "your-grafana-password"

# terraform output -state=../infra/terraform/terraform.tfstate grafana_url
grafana_url = "http://your-grafana-url:3000"

# Path to dashboard JSON files
dashboards_path = "../../dashboards"

# Define teams and their bucket access permissions
bucket_teams = {
  "Lab Team A" = {
    members = ["user1", "user2"]
    buckets = ["lab-team-a-bucket-1", "lab-team-a-bucket-2"]
  },
  "Lab Team B" = {
    members = ["user3", "user4"] 
    buckets = ["lab-team-b-bucket-1", "lab-team-b-bucket-2"]
  }
}

# Default password for all users (can be overridden)
default_user_password = "ChangeMe123!"
